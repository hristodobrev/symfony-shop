{% extends 'base.html.twig' %}

{% block title %}
    Add Product
{% endblock %}

{% block main %}
    <div class="well">
        <form class="form-horizontal" method="post" action="{{ path('add_product') }}">
            <fieldset>
                <legend>Add New Product</legend>
                <div class="form-group">
                    <label for="name" class="col-lg-3 control-label">Name</label>
                    <div class="col-lg-9">
                        <input type="text" name="product[name]" class="form-control" id="name" placeholder="Enter product name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="description" class="col-lg-3 control-label">Description</label>
                    <div class="col-lg-9">
                        <textarea class="form-control" name="product[description]" id="description" placeholder="Enter some description"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label for="price" class="col-lg-3 control-label">Price</label>
                    <div class="col-lg-9">
                        <input type="number" name="product[price]" class="form-control" id="price">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-3 col-lg-9">
                        {{ form_row(productForm._token) }}
                        <input class="btn btn-primary" type="submit" value="Add Product">
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
{% endblock %}

